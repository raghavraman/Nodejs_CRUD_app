   <div class="row">
        <div class="col-md-12">
            <h4>User Table Details</h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordered table-striped">
                    <thead>
                        <th>Task Name</th>
                        <th>Time Entry Description</th>
                        <th>Duration</th>
                        <th>Start Timer</th>
                        <th>Edit Entry</th>
                    </thead>
                    <tbody>
                        {{#each valuesss}}
                        <tr>
                            <td>{{this.task_name}}</td>
                            <td>{{this.note}}</td>
                            <td>{{this.duration}}</td>
                            <td>{{#ifEquals start_time "00:00:00"}}
                                <button type="button" class="btn btn-success" onclick="startTimer({{this.entry_id}})">Start</button>
                                {{else}}
                                <button type="button" class="btn btn-danger" onclick="stopTimer({{this.entry_id}})"">Stop</button>
                                {{/ifEquals}}
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="open-EditUser btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#editUser"
                                    data-id="{{this.id}}"
                                    data-username="{{this.username}}"
                                    data-email="{{this.email}}"
                                    data-password="{{this.password}}"
                                    ><span class="glyphicon glyphicon-pencil"></span></button>
                                </p>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>
