<div class="container">
    <!-- Task Entries DETAILS TABLE -->
    <div class="row">
        <div class="col-md-12">
            <h4>Task Entries Table Details</h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordered table-striped">
                    <thead>
                        <th>Id</th>
                        <th>Task Id</th>
                        <th>Duration</th>
                        <th>Note</th>
                        <th>Start Time</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                        {{#each valuesss}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.task_id}}</td>
                            <td>{{this.duration}}</td>
                            <td>{{this.note}}</td>
                            <td>{{this.start_time}}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="open-EditTaskEntry btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#editTaskEntry"
                                    data-id="{{this.id}}"
                                    data-task_id="{{this.task_id}}"
                                    data-duration="{{this.duration}}"
                                    data-note="{{this.note}}"
                                    data-start_time="{{this.start_time}}"
                                    ><span class="glyphicon glyphicon-pencil"></span></button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="open-deleteTaskEntry btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" 
                                    data-id="{{this.id}}"
                                    data-target="#deleteTaskEntry"><span class="glyphicon glyphicon-trash"></span></button>
                                </p>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a id="add_row" class="btn btn-default pull-left" href="/addtaskentrys">Add Task Entry</a>
</div>
<div class="modal fade" id="editTaskEntry" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control" id='task_id' type="text" placeholder="Task Id" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" id='duration' type="text" placeholder="Duration" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" id='note' type="text" placeholder="note" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" id='start_time' type=
                    "datetime-local" placeholder="start_time" value="">
                </div>
                <div class="form-group" style="display:none;">
                    <input class="form-control " id="id" type="text" placeholder="id" value="">
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="submitUpdate btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="deleteTaskEntry" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Delete this Task entry</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Task Entry?</div>
                 <div class="form-group" style="display:none;">
                    <input class="form-control " id="id" type="text" placeholder="id" value="">
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="deleteTaskEntry btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>