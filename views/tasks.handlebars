<div class="container">
    <!-- TASKS DETAILS TABLE -->
    <div class="row">
        <div class="col-md-12">
            <h4>TASKS Table Details</h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordered table-striped">
                    <thead>
                        <th>Id</th>
                        <th>Project Id</th>
                        <th>User Id</th>
                        <th>Task Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                        {{#each valuesss}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.project_id}}</td>
                            <td>{{this.user_id}}</td>
                            <td>{{this.task_name}}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="open-EditTask btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#editTask"
                                    data-id="{{this.id}}"
                                    data-project_id="{{this.project_id}}"
                                    data-user_id="{{this.user_id}}"
                                    data-task_name="{{this.task_name}}"
                                    ><span class="glyphicon glyphicon-pencil"></span></button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="open-deleteTask btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" 
                                    data-id="{{this.id}}"
                                    data-target="#deleteTask"><span class="glyphicon glyphicon-trash"></span></button>
                                </p>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a id="add_row" class="btn btn-default pull-left " href='/addtask'>Add Task</a>
</div>
<div class="modal fade" id="editTask" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control" id='project_id' type="text" placeholder="Project id" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" id='user_id' type="text" placeholder="User Id" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" id='task_name' type="text" placeholder="Task Name" value="">
                </div>
                <div class="form-group" style="display:none;">
                    <input class="form-control " id="id" type="text" placeholder="id" value="">
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="submitUpdate btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="deleteTask" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Task?</div>
                 <div class="form-group" style="display:none;">
                    <input class="form-control " id="id" type="text" placeholder="id" value="">
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="deleteTask btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>